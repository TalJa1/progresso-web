FROM nginx:stable-alpine

# Copy the pre-built static site from the build context (we will build
# with the local `dist` directory as the build context so the container
# contains exactly the locally-built files).
COPY . /usr/share/nginx/html

# Use default nginx config. If you need custom headers/gzip, copy your
# `nginx.conf` into the image instead by changing the build context or
# copying the file here.

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

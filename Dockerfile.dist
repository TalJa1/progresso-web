FROM node:20-alpine

WORKDIR /app

# Install serve globally to serve static files
RUN npm install -g serve

# Copy the pre-built static site from the build context (we will build
# with the local `dist` directory as the build context so the container
# contains exactly the locally-built files).
COPY . /app/dist
COPY serve.json /app/serve.json

EXPOSE 3000
CMD ["serve", "dist", "-l", "3000", "-c", "/app/serve.json"]
